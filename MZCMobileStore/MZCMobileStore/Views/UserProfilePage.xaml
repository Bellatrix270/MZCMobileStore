<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MZCMobileStore.Views.UserProfilePage"
             xmlns:vm="clr-namespace:MZCMobileStore.ViewModels"
             xmlns:controls="clr-namespace:MZCMobileStore.Views.Controls;assembly=MZCMobileStore"
             Title="{Binding Title}">
    <ContentPage.BindingContext>
        <vm:UserProfileViewModel />
    </ContentPage.BindingContext>

    <Shell.TitleView>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Padding="10">
            <Label Text="{Binding Title}"
                   FontFamily="Roboto-Bold"
                   TextColor="#292929"
                   FontSize="21"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"/>
        </StackLayout>
    </Shell.TitleView>

    <ContentPage.Resources>

    </ContentPage.Resources>

    <Grid>
        
    </Grid>

</ContentPage>
